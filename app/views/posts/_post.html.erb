		<br><%= post.comment %><br>
		<%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
				<% post.tags.each do |tag| %>
					<%= link_to tag.name, tag_path(tag) %>
				<% end %>

			<% if @comments.any? %>
				<br><% post.comments.each do |comment| %>
					<%= comment.comment %>
				<% end %><br>
			<% else %>
				No Comments
			<% end %>
				
			<% if post.user == current_user || true %>
			<%= link_to "Delete", post_path(post), method: :delete %>
			<% end %>

	<% if user_signed_in? %>
			<% if user_likes?(post) %>
			<%= link_to "Unlike", post_like_path(post, user_likes_for(post)), method: :delete %>
			<% else %>
			<%= link_to "Like", post_likes_path(post), method: :post%>
			<% end %>
	<% end %>

	<% if user_signed_in? %>
			<% if user_hates?(post) %>
				<%= link_to "Unhate", post_hate_path(post, user_hates_for(post)), method: :delete %>
			<% else %>
				<%= link_to "Hate", post_hates_path(post), method: :post %>
			<% end %>
	<% end %>

