<% if @posts.any?  %>
	<% @posts.each do |post| %>
		<br><%= post.comment %><br>
		<%= post.image %><br>
	<% end %>
<% else %>
No Posts yet!<br>
<% end %>


<%= form_for @post do |f| %>

	<%= f.label :image %>
	<%= f.text_field :image %>

	<%= f.label :comment %>
	<%= f.text_field :comment %>

	<%= f.submit 'Add' %>
<% end %>