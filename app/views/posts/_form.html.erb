<%= form_for @post, html: { multipart: true } do |f| %>

    <%= f.label :comment %>
	<%= f.text_field :comment %>

    <%= f.label :tag_names, 'Tags' %>
	<%= f.text_field :tag_names %>

    <%= f.label :picture %>
	<%= f.file_field :picture %>

	<%= f.hidden_field :longitude, class:"longitude" %>

	<%= f.hidden_field :latitude, class:"latitude" %>
  
  	<%= f.submit 'Add' %>
<% end %>

<input type="text" id="address" placeholder="Type Location">
<input type="submit" class="btn btn-sm btn-default" id="submit-location-search" value="Find">
<div id="map-posts" data-post-id="<%= @post.id %>"></div>
